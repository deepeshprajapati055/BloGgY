<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>TechBlogApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>UserRegister</servlet-name>
    <servlet-class>com.techblog.controllers.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegister</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserLogin</servlet-name>
    <servlet-class>com.techblog.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLogin</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserLogoutServlet</servlet-name>
    <servlet-class>com.techblog.controllers.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserEditDetails</servlet-name>
    <servlet-class>com.techblog.controllers.EditServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserEditDetails</servlet-name>
    <url-pattern>/EditServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserPostDetails</servlet-name>
    <servlet-class>com.techblog.controllers.AddPost</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserPostDetails</servlet-name>
    <url-pattern>/AddPost</url-pattern>
  </servlet-mapping>
  
</web-app>